<!DOCTTYPE html>
<html>
    include header.pug
    
    <body>

        -var key=['Event Name', 'Co-ordinators','Venue','Maximum Participants','See Poster','Prize Money','Date','Timing'];
        -var value=[event.Event_Name, [event.Co_ordinator1,event.Co_ordinator2],event.Venue,event.Maximum_Members,event.Poster_Url,event.Prize_Money,event.Event_Date,event.Event_Time]
    
        div(class="back")
            div(class="color")
                div(class="container")
                    div(class="pad")
                        h2(class="text-center content1")= event.Event_Name
                    <br>
                  
                    <table class="text-center table table-dark table-striped table-bordered">
                    <col width="600vw" height="1vh">
                    <col width="600vw">
                    <thead class="heading thead-light">
                        <tr>
                            th= "About"
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="eventable">
                            th= event.About
                        </tr>
                    </tbody>
                    <br><br>

                    <table class="text-center table table-dark table-striped table-bordered">
                        <br><br>
                        <col width="600vw" height="1vh">
                        <col width="600vw"  >
                        <thead class="heading thead-light">
                            <tr>
                                th="Events"
                                th="Details"
                            </tr>
                        </thead>
                        <tbody class="eventable">
                            -for(var i=0;i<key.length;i++)
                                <tr>
                                    td= key[i]
                                    -if(i!=1)
                                        -if(i==4)
                                            <td>
                                                a(href="https://www.washingtonpost.com/graphics/2019/entertainment/oscar-nominees-movie-poster-design/img/vice-web.jpg" style="text-decoration:none;color:white")= value[i]+".jpg"
                                            </td>
                                        -else
                                            td= value[i]
                                    -else
                                        td #{value[i][0]} <br/> <br/> #{value[i][1]}
                                </tr>
                        </tbody>
                    </table>
                    <br><br>

                    <div class="card text-white bg-dark">
                        <h4 class="card-header text-dark bg-light text-center">Rules</h4>
                        <ul>
                            -console.log(event.Rules)
                            -for(var i=0;i<4;i++)
                                -if(event.Rules[`${i+1}`]!=' ')    
                                    li= event.Rules[`${i+1}`]
                        </ul>   
                    </div> 
                    br


        <script src="../vikiran.js"></script></body>
</html>